@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
    ViewData["Title"] = "Sign Up";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="main-div p-4">
                <h2 class="mb-4 text-center">Cadastro</h2>
                <form>
                    <div class="form-group">
                        <label for="name">Nome</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Senha</label>
                        <input type="password" class="form-control" id="pass" name="pass" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="dob">Data de Nascimento</label>
                        <input type="date" class="form-control" id="dob" name="dob" required>
                    </div>

                    <div class="form-group mt-4 mb-3">
                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn btn-primary active" id="employee-btn">
                                <!-- Linha alterada -->
                                <input type="radio" name="accountType" id="employee" value="Empregado" autocomplete="off" checked hidden> Empregado  <!-- Linha alterada -->
                            </label>
                            <label class="btn btn-primary" id="company-btn">
                                <!-- Linha alterada -->
                                <input type="radio" name="accountType" id="company" value="Empresa" autocomplete="off" hidden> Empresa  <!-- Linha alterada -->
                            </label>
                        </div>
                    </div>


                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Sign Up</button>
                    </div>
                    <div class="form-group text-center">
                        <a href="SignIn">Já possui uma conta? Faça login aqui</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* ... (seus outros estilos) ... */

        #toggle-buttons .btn {
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

        input[type="radio"] {
            display: none;
        }

        .toggle-button .btn.active {
            background-color: #007BFF; /* A cor azul */
            color: #fff;
        }
    </style>
}

@section Scripts
    {
    <script>
        $(document).ready(function () {
            // Adicionando novo script JavaScript para controlar a troca de classes ativas
            $('#employee-btn, #company-btn').click(function () {
                $('#employee-btn, #company-btn').removeClass('active');
                $(this).addClass('active');
            });
        });
    </script>
}
